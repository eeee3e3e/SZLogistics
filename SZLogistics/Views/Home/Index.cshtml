@{
    ViewBag.Title = "SZLogistics-采购信息管理系统";
}

<div>
    @*<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>*@
    <script>
        $(document).ready(
            function () {
                var strUserType
                $("#btnLogin").click(function ()
                {
                    var strUserName = $('#txt_UserName').val();
                    var strPassword = $('#txt_Password').val();
                    strUserType = $('#sel_UserType').val();
                    var data =
                    {
                        strUserName: strUserName,
                        strPassword: strPassword,
                        strUserType: strUserType
                    }

                    $.post("/Home/LoginSys",data, function(returnData) 
                    {
                        alert(returnData.RetStatus);
                        if (strUserType=="1"&&returnData.RetStatus == "成功")
                        {
                            window.location.href = "/MainFrm/MainFrm";
                        }
                        else if (strUserType == "2" && returnData.RetStatus == "成功") {
                            window.location.href = "/PMainFrm/PMainFrm";
                        }
                        else
                        { }
                    });
            
                });

           });
    </script>
</div>
<div>
    <label>用户名: </label> <input id="txt_UserName" type="text" value=""/>
    
</div>
<div>
    <label>密  码: </label> <input id="txt_Password" type="password" value="" />
</div>
<div>
    <select id="sel_UserType">
        <option value="1">酒店用户</option>
        <option value="2">采购商</option>
    </select>
</div>
<div>
    <span id="btnLogin">登录</span><span id="btnReset">重置</span>
</div>